            }
        });

        document.getElementById('partForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            try {
                const url = data.id ? `${API_BASE}/parts/${data.id}` : `${API_BASE}/parts`;
