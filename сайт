            }
        }

        async function loadMaintenance() {
            const container = document.getElementById('maintenanceList');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/maintenance`);
                const data = await response.json();
                
                let html = `
                    <table>
                        <tr>
                            <th>–û–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ</th>
                            <th>–î–∞—Ç–∞</th>
                            <th>–¢–∏–ø</th>
                            <th>–°–ª–æ–∂–Ω–æ—Å—Ç—å</th>
                            <th>–¢–µ—Ö–Ω–∏–∫</th>
                            <th>–°—Ç–∞—Ç—É—Å</th>
                            <th>–í—Ä–µ–º—è</th>
                            <th>–°—Ç–æ–∏–º–æ—Å—Ç—å</th>
                            <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                        </tr>
                `;
                
                data.forEach(work => {
                    const total = (work.work_cost || 0) + (work.parts_cost || 0);
                    const statusClass = `status-${work.status.replace('_', '-')}`;
                    const difficultyClass = `difficulty-${work.difficulty}`;
                    const difficultyText = getDifficultyText(work.difficulty);
                    const timeInfo = work.actual_hours ? 
                        `${work.actual_hours}—á (–∏–∑ ${work.duration_hours}—á)` : 
                        `${work.duration_hours}—á (–ø–ª–∞–Ω)`;
                    
                    html += `
                        <tr>
                            <td>${work.equipment_name}</td>
                            <td>${work.maintenance_date}</td>
                            <td>${work.type}</td>
                            <td><span class="status-badge ${difficultyClass}">${difficultyText}</span></td>
                            <td>${work.technician || '-'}</td>
                            <td><span class="status-badge ${statusClass}">${getStatusText(work.status)}</span></td>
                            <td>${timeInfo}</td>
                            <td><strong>${total.toFixed(2)} —Ä—É–±.</strong></td>
                            <td>
                                ${work.status === 'planned' ? `
                                    <button class="btn btn-sm btn-success" onclick="showTimerModal(${work.id}, '${work.equipment_name}')">‚è±Ô∏è –ù–∞—á–∞—Ç—å</button>
                                ` : ''}
                                ${work.status === 'in_progress' ? `
                                    <button class="btn btn-sm btn-warning" onclick="showTimerModal(${work.id}, '${work.equipment_name}')">‚è±Ô∏è –í —Ä–∞–±–æ—Ç–µ</button>
                                ` : ''}
                                <button class="btn btn-sm btn-info" onclick="showMaintenanceModal(${JSON.stringify(work).replace(/"/g, '&quot;')})">‚úèÔ∏è</button>
                                <button class="btn btn-sm btn-warning" onclick="deleteMaintenance(${work.id})">üóëÔ∏è</button>
                            </td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ —Å–µ—Ä–≤–µ—Ä –∑–∞–ø—É—â–µ–Ω –Ω–∞ localhost:3000</div>';
            }
        }

        async function loadParts() {
            const container = document.getElementById('partsList');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/parts`);
                const data = await response.json();
                
                let html = `
                    <table>
                        <tr>
                            <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                            <th>–ê—Ä—Ç–∏–∫—É–ª</th>
                            <th>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ</th>
                            <th>–ú–∏–Ω–∏–º—É–º</th>
                            <th>–¶–µ–Ω–∞</th>
                            <th>–ö–∞—Ç–µ–≥–æ—Ä–∏—è</th>
                            <th>–°—Ç–∞—Ç—É—Å</th>
                            <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                        </tr>
                `;
                
                data.forEach(part => {
                    const isLowStock = part.quantity <= part.min_quantity;
                    const status = isLowStock ? '‚ö†Ô∏è –ù—É–∂–Ω–æ –ø–æ–ø–æ–ª–Ω–∏—Ç—å' : '‚úÖ –í –Ω–æ—Ä–º–µ';
                    const rowStyle = isLowStock ? 'style="background-color: #ffe6e6;"' : '';
                    
                    html += `
                        <tr ${rowStyle}>
                            <td>${part.name}</td>
                            <td>${part.part_number}</td>
                            <td>${part.quantity}</td>
                            <td>${part.min_quantity}</td>
                            <td>${part.price || 0} —Ä—É–±.</td>
                            <td>${part.category || '-'}</td>
                            <td>${status}</td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="showPartModal(${JSON.stringify(part).replace(/"/g, '&quot;')})">‚úèÔ∏è</button>
                                <button class="btn btn-sm btn-warning" onclick="deletePart(${part.id})">üóëÔ∏è</button>
                            </td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ —Å–µ—Ä–≤–µ—Ä –∑–∞–ø—É—â–µ–Ω –Ω–∞ localhost:3000</div>';
            }
        }

        async function loadServiceRequests() {
            const container = document.getElementById('serviceRequestsList');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/service-requests`);
                const data = await response.json();
                
                if (data.length === 0) {
                    container.innerHTML = '<p>–ù–µ—Ç –∑–∞—è–≤–æ–∫ –Ω–∞ –æ–±—Å–ª—É–∂–∏–≤–∞–Ω–∏–µ</p>';
                    return;
                }
                
                let html = `
                    <table>
                        <tr>
                            <th>–ö–ª–∏–µ–Ω—Ç</th>
                            <th>–û–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ</th>
                            <th>–ü—Ä–æ–±–ª–µ–º–∞</th>
                            <th>–°—Ä–æ—á–Ω–æ—Å—Ç—å</th>
                            <th>–°—Ç–∞—Ç—É—Å</th>
                            <th>–î–∞—Ç–∞ —Å–æ–∑–¥–∞–Ω–∏—è</th>
                            <th>–¢–µ—Ö–Ω–∏–∫</th>
                            <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                        </tr>
                `;
                
                data.forEach(request => {
                    const statusClass = `status-${request.status.replace(' ', '-')}`;
                    const urgencyClass = request.urgency === '–∫—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è' || request.urgency === '–≤—ã—Å–æ–∫–∞—è' ? `urgency-${request.urgency}` : '';
                    
                    html += `
                        <tr>
                            <td>${request.client_name}</td>
                            <td>${request.equipment_name} ${request.equipment_model ? '(' + request.equipment_model + ')' : ''}</td>
                            <td title="${request.problem_description}">${request.problem_description.substring(0, 50)}${request.problem_description.length > 50 ? '...' : ''}</td>
                            <td><span class="${urgencyClass}">${request.urgency}</span></td>
                            <td><span class="status-badge ${statusClass}">${getRequestStatusText(request.status)}</span></td>
                            <td>${formatDateTime(request.created_date)}</td>
                            <td>${request.assigned_technician || '-'}</td>
                            <td>
                                ${request.status === '–Ω–æ–≤–∞—è' ? `
                                    <button class="btn btn-sm btn-success" onclick="assignTechnician(${request.id})">üë®‚Äçüîß –ù–∞–∑–Ω–∞—á–∏—Ç—å</button>
                                    <button class="btn btn-sm btn-warning" onclick="deleteRequest(${request.id})">üóëÔ∏è</button>
                                ` : ''}
                                ${request.status === '–≤ —Ä–∞–±–æ—Ç–µ' ? `
                                    <button class="btn btn-sm btn-success" onclick="addSolution(${request.id})">‚úÖ –†–µ—à–µ–Ω–∏–µ</button>
                                ` : ''}
                                ${request.status === '—Ä–µ—à–µ–Ω–∞' ? `
                                    <button class="btn btn-sm" onclick="viewSolution(${request.id})">üìã –ü—Ä–æ—Å–º–æ—Ç—Ä</button>
                                    <button class="btn btn-sm btn-warning" onclick="deleteRequest(${request.id})">üóëÔ∏è</button>
                                ` : ''}
                            </td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ —Å–µ—Ä–≤–µ—Ä –∑–∞–ø—É—â–µ–Ω –Ω–∞ localhost:3000</div>';
            }
        }

        async function generateReport() {
            const container = document.getElementById('reportResults');
            const startDate = document.getElementById('reportStartDate').value;
            const endDate = document.getElementById('reportEndDate').value;
            const reportType = document.querySelector('input[name="reportType"]:checked').value;
            
            if (!startDate || !endDate) {
                container.innerHTML = '<div class="error">–£–∫–∞–∂–∏—Ç–µ –ø–µ—Ä–∏–æ–¥ –¥–ª—è –æ—Ç—á–µ—Ç–∞</div>';
                return;
            }
            
            container.innerHTML = '<div class="loading">–§–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏–µ –æ—Ç—á–µ—Ç–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/reports/maintenance?startDate=${startDate}&endDate=${endDate}`);
                const data = await response.json();
                
                if (data.length === 0) {
                    container.innerHTML = '<p>–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –∑–∞ –≤—ã–±—Ä–∞–Ω–Ω—ã–π –ø–µ—Ä–∏–æ–¥</p>';
                    return;
                }
                
                let totalCost = 0;
                let totalWorkCost = 0;
                let totalPartsCost = 0;
                let totalHours = 0;
                let totalActualHours = 0;
                
                let html = `
                    <div class="card info">
                        <h3>–û—Ç—á–µ—Ç –ø–æ –æ–±—Å–ª—É–∂–∏–≤–∞–Ω–∏—é –∑–∞ –ø–µ—Ä–∏–æ–¥ ${startDate} - ${endDate}</h3>
                        <table>
                            <tr>
                                <th>–î–∞—Ç–∞</th>
                                <th>–û–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ</th>
                                <th>–ö–ª–∏–µ–Ω—Ç</th>
                                <th>–¢–∏–ø —Ä–∞–±–æ—Ç</th>
                                <th>–¢–µ—Ö–Ω–∏–∫</th>
                                <th>–°–ª–æ–∂–Ω–æ—Å—Ç—å</th>
                                <th>–°—Ç–æ–∏–º–æ—Å—Ç—å —Ä–∞–±–æ—Ç</th>
                                <th>–°—Ç–æ–∏–º–æ—Å—Ç—å –∑–∞–ø—á–∞—Å—Ç–µ–π</th>
                                <th>–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å</th>
                                <th>–í—Ä–µ–º—è (–ø–ª–∞–Ω/—Ñ–∞–∫—Ç)</th>
                                <th>–°—Ç–∞—Ç—É—Å</th>
                            </tr>
                `;
                
                data.forEach(work => {
                    totalWorkCost += work.work_cost || 0;
                    totalPartsCost += work.parts_cost || 0;
                    totalCost += work.total_cost || 0;
                    totalHours += work.duration_hours || 0;
                    totalActualHours += work.actual_hours || 0;
                    const statusClass = `status-${work.status.replace('_', '-')}`;
                    const difficultyClass = `difficulty-${work.difficulty}`;
                    const difficultyText = getDifficultyText(work.difficulty);
                    const timeInfo = work.actual_hours ? 
                        `${work.actual_hours}—á / ${work.duration_hours}—á` : 
                        `- / ${work.duration_hours}—á`;
                    
                    html += `
                        <tr>
                            <td>${work.maintenance_date}</td>
                            <td>${work.equipment_name}</td>
                            <td>${work.client_name}</td>
                            <td>${work.type}</td>
                            <td>${work.technician || '-'}</td>
                            <td><span class="status-badge ${difficultyClass}">${difficultyText}</span></td>
                            <td>${(work.work_cost || 0).toFixed(2)} —Ä—É–±.</td>
                            <td>${(work.parts_cost || 0).toFixed(2)} —Ä—É–±.</td>
                            <td>${(work.total_cost || 0).toFixed(2)} —Ä—É–±.</td>
                            <td>${timeInfo}</td>
                            <td><span class="status-badge ${statusClass}">${getStatusText(work.status)}</span></td>
                        </tr>
                    `;
                });
                
                html += `
                    </table>
                    <div class="card success" style="margin-top: 20px;">
                        <h4>üìà –ò—Ç–æ–≥–∏ –æ—Ç—á–µ—Ç–∞:</h4>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                            <div>
                                <strong>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ä–∞–±–æ—Ç:</strong><br>
                                <span style="font-size: 1.5em;">${data.length}</span>
                            </div>
                            <div>
                                <strong>–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å —Ä–∞–±–æ—Ç:</strong><br>
                                <span style="font-size: 1.5em;">${totalWorkCost.toFixed(2)} —Ä—É–±.</span>
                            </div>
                            <div>
                                <strong>–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å –∑–∞–ø—á–∞—Å—Ç–µ–π:</strong><br>
                                <span style="font-size: 1.5em;">${totalPartsCost.toFixed(2)} —Ä—É–±.</span>
                            </div>
                            <div>
                                <strong>–û–±—â–∞—è —Å—É–º–º–∞:</strong><br>
                                <span style="font-size: 1.5em; color: var(--success);">${totalCost.toFixed(2)} —Ä—É–±.</span>
                            </div>
                            <div>
                                <strong>–û–±—â–µ–µ –≤—Ä–µ–º—è (–ø–ª–∞–Ω/—Ñ–∞–∫—Ç):</strong><br>
                                <span style="font-size: 1.5em;">${totalHours.toFixed(1)}—á / ${totalActualHours.toFixed(1)}—á</span>
                            </div>
                        </div>
                    </div>
                `;
                
                container.innerHTML = html;
                
                window.currentReportData = {
                    name: `–û—Ç—á–µ—Ç –ø–æ –æ–±—Å–ª—É–∂–∏–≤–∞–Ω–∏—é ${startDate} - ${endDate}`,
                    type: reportType,
                    period_start: startDate,
                    period_end: endDate,
                    data: data
                };
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ —Ñ–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏—è –æ—Ç—á–µ—Ç–∞</div>';
            }
        }

        async function saveReport() {
            if (!window.currentReportData) {
                showMessage('–°–Ω–∞—á–∞–ª–∞ —Å—Ñ–æ—Ä–º–∏—Ä—É–π—Ç–µ –æ—Ç—á–µ—Ç', 'error');
                return;
            }
            
            try {
                const response = await fetch(`${API_BASE}/reports`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(window.currentReportData)
                });
                
                if (response.ok) {
                    showMessage('–û—Ç—á–µ—Ç —É—Å–ø–µ—à–Ω–æ —Å–æ—Ö—Ä–∞–Ω–µ–Ω!', 'success');
                    loadSavedReports();
                } else {
                    showMessage('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –æ—Ç—á–µ—Ç–∞', 'error');
                }
            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –æ—Ç—á–µ—Ç–∞', 'error');
            }
        }

        async function downloadReport() {
            if (!window.currentReportData) {
                showMessage('–°–Ω–∞—á–∞–ª–∞ —Å—Ñ–æ—Ä–º–∏—Ä—É–π—Ç–µ –æ—Ç—á–µ—Ç', 'error');
                return;
            }
            
            try {
                let reportContent = `–û–¢–ß–ï–¢: ${window.currentReportData.name}\n`;
                reportContent += `–¢–∏–ø: ${window.currentReportData.type}\n`;
                reportContent += `–ü–µ—Ä–∏–æ–¥: ${window.currentReportData.period_start} - ${window.currentReportData.period_end}\n`;
                reportContent += `–î–∞—Ç–∞ —Ñ–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏—è: ${new Date().toLocaleString('ru-RU')}\n\n`;
                reportContent += "–î–ï–¢–ê–õ–ò –†–ê–ë–û–¢:\n";
                reportContent += "=".repeat(80) + "\n\n";
                
                window.currentReportData.data.forEach((work, index) => {
                    reportContent += `–†–ê–ë–û–¢–ê ${index + 1}:\n`;
                    reportContent += `–û–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ: ${work.equipment_name}\n`;
                    reportContent += `–ö–ª–∏–µ–Ω—Ç: ${work.client_name}\n`;
                    reportContent += `–î–∞—Ç–∞: ${work.maintenance_date}\n`;
                    reportContent += `–¢–∏–ø: ${work.type}\n`;
                    reportContent += `–¢–µ—Ö–Ω–∏–∫: ${work.technician || '–ù–µ –Ω–∞–∑–Ω–∞—á–µ–Ω'}\n`;
                    reportContent += `–°–ª–æ–∂–Ω–æ—Å—Ç—å: ${getDifficultyText(work.difficulty)}\n`;
                    reportContent += `–°—Ç–æ–∏–º–æ—Å—Ç—å —Ä–∞–±–æ—Ç: ${(work.work_cost || 0).toFixed(2)} —Ä—É–±.\n`;
                    reportContent += `–°—Ç–æ–∏–º–æ—Å—Ç—å –∑–∞–ø—á–∞—Å—Ç–µ–π: ${(work.parts_cost || 0).toFixed(2)} —Ä—É–±.\n`;
                    reportContent += `–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: ${(work.total_cost || 0).toFixed(2)} —Ä—É–±.\n`;
                    reportContent += `–í—Ä–µ–º—è: ${work.actual_hours ? work.actual_hours + '—á (—Ñ–∞–∫—Ç)' : work.duration_hours + '—á (–ø–ª–∞–Ω)'}\n`;
                    reportContent += `–°—Ç–∞—Ç—É—Å: ${getStatusText(work.status)}\n`;
                    reportContent += "-".repeat(40) + "\n\n";
                });
                
                const totalCost = window.currentReportData.data.reduce((sum, item) => sum + (item.total_cost || 0), 0);
                const totalWorks = window.currentReportData.data.length;
                
                reportContent += "–ò–¢–û–ì–ò:\n";
                reportContent += "=".repeat(80) + "\n";
                reportContent += `–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ä–∞–±–æ—Ç: ${totalWorks}\n`;
                reportContent += `–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: ${totalCost.toFixed(2)} —Ä—É–±.\n`;
                reportContent += `–°—Ä–µ–¥–Ω—è—è —Å—Ç–æ–∏–º–æ—Å—Ç—å —Ä–∞–±–æ—Ç—ã: ${(totalCost / totalWorks).toFixed(2)} —Ä—É–±.\n\n`;
                reportContent += `–û—Ç—á–µ—Ç —Å—Ñ–æ—Ä–º–∏—Ä–æ–≤–∞–Ω —Å–∏—Å—Ç–µ–º–æ–π —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è —Ç–µ—Ö–æ–±—Å–ª—É–∂–∏–≤–∞–Ω–∏–µ–º\n`;
                
                const blob = new Blob([reportContent], { type: 'text/plain;charset=utf-8' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `report-${window.currentReportData.period_start}-${window.currentReportData.period_end}.txt`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                showMessage('–û—Ç—á–µ—Ç —É—Å–ø–µ—à–Ω–æ —Å–∫–∞—á–∞–Ω!', 'success');
                
            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —Å–∫–∞—á–∏–≤–∞–Ω–∏—è –æ—Ç—á–µ—Ç–∞', 'error');
            }
        }

        async function loadSavedReports() {
            const container = document.getElementById('savedReportsList');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/reports`);
                const data = await response.json();
                
                if (data.length === 0) {
                    container.innerHTML = '<p>–ù–µ—Ç —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã—Ö –æ—Ç—á–µ—Ç–æ–≤</p>';
                    return;
                }
                
                let html = `
                    <table>
                        <tr>
                            <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                            <th>–¢–∏–ø</th>
                            <th>–ü–µ—Ä–∏–æ–¥</th>
                            <th>–î–∞—Ç–∞ —Å–æ–∑–¥–∞–Ω–∏—è</th>
                            <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                        </tr>
                `;
                
                data.forEach(report => {
                    html += `
                        <tr>
                            <td>${report.name}</td>
                            <td>${report.type}</td>
                            <td>${report.period_start} - ${report.period_end}</td>
                            <td>${formatDateTime(report.created_date)}</td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="downloadSavedReport(${report.id})">üì• –°–∫–∞—á–∞—Ç—å</button>
                            </td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã—Ö –æ—Ç—á–µ—Ç–æ–≤</div>';
            }
        }

        async function downloadSavedReport(reportId) {
            try {
                window.open(`${API_BASE}/reports/${reportId}/download`, '_blank');
                showMessage('–û—Ç—á–µ—Ç —Å–∫–∞—á–∏–≤–∞–µ—Ç—Å—è...', 'success');
            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —Å–∫–∞—á–∏–≤–∞–Ω–∏—è –æ—Ç—á–µ—Ç–∞', 'error');
            }
        }

        async function loadWorkPlan() {
            const container = document.getElementById('workPlan');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/work-plan`);
                const data = await response.json();
                
                if (data.length === 0) {
                    container.innerHTML = '<p>–ù–µ—Ç –∑–∞–ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö —Ä–∞–±–æ—Ç –Ω–∞ –±–ª–∏–∂–∞–π—à–∏–µ 7 –¥–Ω–µ–π</p>';
                    return;
                }
                
                let html = `
                    <table>
                        <tr>
                            <th>–û–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ</th>
                            <th>–ö–ª–∏–µ–Ω—Ç</th>
                            <th>–î–∞—Ç–∞</th>
                            <th>–¢–∏–ø</th>
                            <th>–¢–µ—Ö–Ω–∏–∫</th>
                            <th>–°—Ç–∞—Ç—É—Å</th>
                            <th>–í—Ä–µ–º—è</th>
                        </tr>
                `;
                
                data.forEach(work => {
                    const statusClass = `status-${work.status.replace('_', '-')}`;
                    const timeInfo = work.actual_hours ? 
                        `${work.actual_hours}—á (—Ñ–∞–∫—Ç)` : 
                        `${work.duration_hours}—á (–ø–ª–∞–Ω)`;
                    
                    html += `
                        <tr>
                            <td>${work.equipment_name} (${work.model})</td>
                            <td>${work.client_name}</td>
                            <td>${work.maintenance_date}</td>
                            <td>${work.type}</td>
                            <td>${work.technician || '-'}</td>
                            <td><span class="status-badge ${statusClass}">${getStatusText(work.status)}</span></td>
                            <td>${timeInfo}</td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø–ª–∞–Ω–∞ —Ä–∞–±–æ—Ç</div>';
            }
        }

        async function loadLowStockParts() {
            const container = document.getElementById('lowStockPartsList');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/low-stock-parts`);
                const data = await response.json();
                
                if (data.length === 0) {
                    container.innerHTML = '<p>–í—Å–µ –∑–∞–ø—á–∞—Å—Ç–∏ –≤ –Ω–∞–ª–∏—á–∏–∏</p>';
                    return;
                }
                
                let html = `
                    <table>
                        <tr>
                            <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                            <th>–ê—Ä—Ç–∏–∫—É–ª</th>
                            <th>–¢–µ–∫—É—â–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ</th>
                            <th>–ú–∏–Ω–∏–º–∞–ª—å–Ω–æ–µ</th>
                            <th>–ù—É–∂–Ω–æ –∑–∞–∫–∞–∑–∞—Ç—å</th>
                            <th>–¶–µ–Ω–∞</th>
                            <th>–ü–æ—Å—Ç–∞–≤—â–∏–∫</th>
                        </tr>
                `;
                
                data.forEach(part => {
                    html += `
                        <tr>
                            <td>${part.name}</td>
                            <td>${part.part_number}</td>
                            <td>${part.quantity}</td>
                            <td>${part.min_quantity}</td>
                            <td><strong style="color: var(--warning);">${part.need_to_order}</strong></td>
                            <td>${part.price} —Ä—É–±.</td>
                            <td>${part.supplier}</td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö –æ –∑–∞–ø—á–∞—Å—Ç—è—Ö</div>';
            }
        }

        async function deleteClient(id) {
            if (!confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ–≥–æ –∫–ª–∏–µ–Ω—Ç–∞?')) return;
            
            try {
                const response = await fetch(`${API_BASE}/clients/${id}`, {
                    method: 'DELETE'
                });
                const result = await response.json();
                showMessage(result.message, 'success');
                loadClients();
            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –∫–ª–∏–µ–Ω—Ç–∞', 'error');
            }
        }

        async function deleteEquipment(id) {
            if (!confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ?')) return;
            
            try {
                const response = await fetch(`${API_BASE}/equipment/${id}`, {
                    method: 'DELETE'
                });
                const result = await response.json();
                showMessage(result.message, 'success');
                loadEquipment();
            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏—è', 'error');
            }
        }

        async function deleteMaintenance(id) {
            if (!confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É —Ä–∞–±–æ—Ç—É?')) return;
            
