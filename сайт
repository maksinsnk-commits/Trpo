            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –∑–∞–ø—á–∞—Å—Ç–∏', 'error');
            }
        });

        document.getElementById('newRequestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch(`${API_BASE}/service-requests`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                showMessage(result.message, 'success');
                closeModal('newRequestModal');
                loadServiceRequests();
            } catch (error) {
                showMessage('–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∑–∞—è–≤–∫–∏', 'error');
            }
        });

        function getStatusText(status) {
            const statusMap = {
                'planned': '–ó–∞–ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–æ',
                'in_progress': '–í —Ä–∞–±–æ—Ç–µ',
                'completed': '–ó–∞–≤–µ—Ä—à–µ–Ω–æ'
            };
            return statusMap[status] || status;
        }

        function getRequestStatusText(status) {
            const statusMap = {
                '–Ω–æ–≤–∞—è': '–ù–æ–≤–∞—è',
                '–≤ —Ä–∞–±–æ—Ç–µ': '–í —Ä–∞–±–æ—Ç–µ',
                '—Ä–µ—à–µ–Ω–∞': '–†–µ—à–µ–Ω–∞'
            };
            return statusMap[status] || status;
        }

        function getDifficultyText(difficulty) {
            const difficultyMap = {
                'low': '–ù–∏–∑–∫–∞—è',
                'medium': '–°—Ä–µ–¥–Ω—è—è',
                'high': '–í—ã—Å–æ–∫–∞—è'
            };
            return difficultyMap[difficulty] || difficulty;
        }

        function formatDateTime(dateTime) {
            if (!dateTime) return '-';
            const date = new Date(dateTime);
            return date.toLocaleString('ru-RU');
        }

        function showMessage(message, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = type;
            messageDiv.textContent = message;
            messageDiv.style.position = 'fixed';
            messageDiv.style.top = '20px';
            messageDiv.style.right = '20px';
            messageDiv.style.zIndex = '1000';
            messageDiv.style.minWidth = '300px';
            messageDiv.style.padding = '15px 20px';
            messageDiv.style.borderRadius = '8px';
            messageDiv.style.boxShadow = '0 4px 15px rgba(0,0,0,0.2)';
            
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.remove();
            }, 5000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardStats();
            loadWorkPlan();
            loadLowStockParts();
        });

async function assignTechnician(requestId) {
    const technician = prompt('–í–≤–µ–¥–∏—Ç–µ –∏–º—è —Ç–µ—Ö–Ω–∏–∫–∞:');
    if (!technician) return;
    
    try {
        const response = await fetch(`${API_BASE}/service-requests/${requestId}/assign`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ technician })
        });
        
        const result = await response.json();
        showMessage(result.message, 'success');
        loadServiceRequests();
    } catch (error) {
        showMessage('–û—à–∏–±–∫–∞ –Ω–∞–∑–Ω–∞—á–µ–Ω–∏—è —Ç–µ—Ö–Ω–∏–∫–∞', 'error');
    }
}

async function addSolution(requestId) {
    const solution = prompt('–í–≤–µ–¥–∏—Ç–µ –æ–ø–∏—Å–∞–Ω–∏–µ —Ä–µ—à–µ–Ω–∏—è:');
    if (!solution) return;
    
    try {
        const response = await fetch(`${API_BASE}/service-requests/${requestId}/solution`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ solution_description: solution })
        });
        
        const result = await response.json();
        showMessage(result.message, 'success');
        loadServiceRequests();
    } catch (error) {
        showMessage('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ä–µ—à–µ–Ω–∏—è', 'error');
    }
}

function viewSolution(requestId) {
    alert('–§—É–Ω–∫—Ü–∏—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ —Ä–µ—à–µ–Ω–∏—è –±—É–¥–µ—Ç —Ä–µ–∞–ª–∏–∑–æ–≤–∞–Ω–∞ –≤ —Å–ª–µ–¥—É—é—â–µ–π –≤–µ—Ä—Å–∏–∏');
}
    </script>
</body>
</html>
