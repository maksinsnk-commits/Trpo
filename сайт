    <script>
        const API_BASE = 'http://localhost:3000/api';
        let currentTimer = null;
        let timerInterval = null;
        let timerStartTime = null;
        let currentMaintenanceId = null;

        function showPage(pageName) {
            const pages = document.getElementsByClassName('page');
            for (let i = 0; i < pages.length; i++) {
                pages[i].classList.remove('active');
            }
            document.getElementById(pageName).classList.add('active');
            
            if (pageName === 'home') {
                loadDashboardStats();
                loadWorkPlan();
                loadLowStockParts();
            } else if (pageName === 'clients') {
                loadClients();
            } else if (pageName === 'equipment') {
                loadEquipment();
                loadClientsForSelect();
            } else if (pageName === 'maintenance') {
                loadMaintenance();
                loadEquipmentForSelect();
            } else if (pageName === 'parts') {
                loadParts();
            } else if (pageName === 'requests') {
                loadServiceRequests();
            } else if (pageName === 'reports') {
                const now = new Date();
                const firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
                document.getElementById('reportStartDate').value = firstDay.toISOString().split('T')[0];
                document.getElementById('reportEndDate').value = now.toISOString().split('T')[0];
            }
        }

        function showModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
            const form = document.getElementById(modalId).querySelector('form');
            if (form) form.reset();
        }

        function showClientModal(client = null) {
            const title = document.getElementById('clientModalTitle');
            const form = document.getElementById('clientForm');
            
            if (client) {
                title.textContent = '‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∫–ª–∏–µ–Ω—Ç–∞';
                document.getElementById('clientId').value = client.id;
                document.getElementById('clientName').value = client.name;
                document.getElementById('clientContact').value = client.contact_person;
                document.getElementById('clientPhone').value = client.phone;
                document.getElementById('clientEmail').value = client.email || '';
                document.getElementById('clientAddress').value = client.address || '';
            } else {
                title.textContent = '‚ûï –î–æ–±–∞–≤–∏—Ç—å –∫–ª–∏–µ–Ω—Ç–∞';
                form.reset();
                document.getElementById('clientId').value = '';
            }
            showModal('clientModal');
        }

        function showEquipmentModal(equipment = null) {
            const title = document.getElementById('equipmentModalTitle');
            const form = document.getElementById('equipmentForm');
            
            if (equipment) {
                title.textContent = '‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ';
                document.getElementById('equipmentId').value = equipment.id;
                document.getElementById('equipmentName').value = equipment.name;
                document.getElementById('equipmentModel').value = equipment.model || '';
                document.getElementById('equipmentSerial').value = equipment.serial_number;
                document.getElementById('equipmentLocation').value = equipment.location || '';
                document.getElementById('equipmentClient').value = equipment.client_id;
                document.getElementById('equipmentInstallDate').value = equipment.installation_date || '';
            } else {
                title.textContent = '‚ûï –î–æ–±–∞–≤–∏—Ç—å –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ';
                form.reset();
                document.getElementById('equipmentId').value = '';
            }
            showModal('equipmentModal');
        }

        function showMaintenanceModal(maintenance = null) {
            const title = document.getElementById('maintenanceModalTitle');
            const form = document.getElementById('maintenanceForm');
            
            if (maintenance) {
                title.textContent = '‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å —Ä–∞–±–æ—Ç—É';
                document.getElementById('maintenanceId').value = maintenance.id;
                document.getElementById('maintenanceEquipment').value = maintenance.equipment_id;
                document.getElementById('maintenanceDate').value = maintenance.maintenance_date;
                document.getElementById('maintenanceType').value = maintenance.type;
                document.getElementById('maintenanceDescription').value = maintenance.description;
                document.getElementById('maintenanceDifficulty').value = maintenance.difficulty || 'medium';
                document.getElementById('maintenanceHours').value = maintenance.duration_hours || '';
                document.getElementById('maintenanceTechnician').value = maintenance.technician || '';
                document.getElementById('maintenanceWorkCost').value = maintenance.work_cost || '';
                document.getElementById('maintenancePartsCost').value = maintenance.parts_cost || '';
            } else {
                title.textContent = '‚ûï –î–æ–±–∞–≤–∏—Ç—å —Ä–∞–±–æ—Ç—É';
                form.reset();
                document.getElementById('maintenanceId').value = '';
                document.getElementById('maintenanceDate').value = new Date().toISOString().split('T')[0];
            }
            showModal('maintenanceModal');
        }

        function showPartModal(part = null) {
            const title = document.getElementById('partModalTitle');
            const form = document.getElementById('partForm');
            
            if (part) {
                title.textContent = '‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø—á–∞—Å—Ç—å';
                document.getElementById('partId').value = part.id;
                document.getElementById('partName').value = part.name;
                document.getElementById('partNumber').value = part.part_number;
                document.getElementById('partQuantity').value = part.quantity;
                document.getElementById('partMinQuantity').value = part.min_quantity;
                document.getElementById('partPrice').value = part.price || '';
                document.getElementById('partCategory').value = part.category || '';
                document.getElementById('partSupplier').value = part.supplier || '';
            } else {
                title.textContent = '‚ûï –î–æ–±–∞–≤–∏—Ç—å –∑–∞–ø—á–∞—Å—Ç—å';
                form.reset();
                document.getElementById('partId').value = '';
            }
            showModal('partModal');
        }

        function showNewRequestModal() {
            showModal('newRequestModal');
        }

        function showTimerModal(maintenanceId, equipmentName) {
            currentMaintenanceId = maintenanceId;
            document.getElementById('timerInfo').textContent = `–†–∞–±–æ—Ç–∞: ${equipmentName}`;
            document.getElementById('workTimer').textContent = '00:00:00';
            document.getElementById('startTimerBtn').disabled = false;
            document.getElementById('stopTimerBtn').disabled = true;
            showModal('timerModal');
        }

        function startWorkTimer() {
            if (!currentMaintenanceId) return;
            
            fetch(`${API_BASE}/maintenance/${currentMaintenanceId}/start`, {
                method: 'PUT'
            }).then(response => response.json())
            .then(data => {
                timerStartTime = new Date();
                document.getElementById('startTimerBtn').disabled = true;
                document.getElementById('stopTimerBtn').disabled = false;
                
                timerInterval = setInterval(updateTimer, 1000);
                showMessage('–†–∞–±–æ—Ç–∞ –Ω–∞—á–∞—Ç–∞!', 'success');
            }).catch(error => {
                showMessage('–û—à–∏–±–∫–∞ –∑–∞–ø—É—Å–∫–∞ —Ç–∞–π–º–µ—Ä–∞', 'error');
            });
        }

        function stopWorkTimer() {
            if (!currentMaintenanceId || !timerInterval) return;
            
            clearInterval(timerInterval);
            
            fetch(`${API_BASE}/maintenance/${currentMaintenanceId}/complete`, {
                method: 'PUT'
            }).then(response => response.json())
            .then(data => {
                document.getElementById('startTimerBtn').disabled = false;
                document.getElementById('stopTimerBtn').disabled = true;
                showMessage(`–†–∞–±–æ—Ç–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! –ó–∞—Ç—Ä–∞—á–µ–Ω–æ –≤—Ä–µ–º–µ–Ω–∏: ${data.actual_hours} —á.`, 'success');
                closeModal('timerModal');
                loadMaintenance();
            }).catch(error => {
                showMessage('–û—à–∏–±–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è —Ä–∞–±–æ—Ç—ã', 'error');
            });
        }

        function updateTimer() {
            if (!timerStartTime) return;
            
            const now = new Date();
            const diff = now - timerStartTime;
            const hours = Math.floor(diff / 3600000);
            const minutes = Math.floor((diff % 3600000) / 60000);
            const seconds = Math.floor((diff % 60000) / 1000);
            
            document.getElementById('workTimer').textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        async function loadClientsForSelect() {
            try {
                const response = await fetch(`${API_BASE}/clients`);
                const clients = await response.json();
                
                const select = document.getElementById('equipmentClient');
                select.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –∫–ª–∏–µ–Ω—Ç–∞...</option>';
                
                clients.forEach(client => {
                    const option = document.createElement('option');
                    option.value = client.id;
                    option.textContent = client.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–ª–∏–µ–Ω—Ç–æ–≤:', error);
            }
        }

        async function loadEquipmentForSelect() {
            try {
                const response = await fetch(`${API_BASE}/equipment`);
                const equipment = await response.json();
                
                const select = document.getElementById('maintenanceEquipment');
                select.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏–µ...</option>';
                
                equipment.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item.id;
                    option.textContent = `${item.name} (${item.model}) - ${item.client_name}`;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏—è:', error);
            }
        }

        async function loadDashboardStats() {
            try {
                const response = await fetch(`${API_BASE}/dashboard/stats`);
                const stats = await response.json();
                
                document.getElementById('totalEquipment').textContent = stats.totalEquipment || 0;
                document.getElementById('activeMaintenance').textContent = stats.activeMaintenance || 0;
                document.getElementById('lowStockParts').textContent = stats.lowStockParts || 0;
                document.getElementById('completedThisMonth').textContent = stats.completedThisMonth || 0;
                document.getElementById('newRequests').textContent = stats.newRequests || 0;
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏:', error);
            }
        }

        async function loadClients() {
            const container = document.getElementById('clientsList');
            container.innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/clients`);
                const data = await response.json();
                
                if (data.length === 0) {
                    container.innerHTML = '<p>–ù–µ—Ç –∫–ª–∏–µ–Ω—Ç–æ–≤ –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö</p>';
                    return;
                }
                
                let html = `
                    <table>
                        <tr>
                            <th>–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                            <th>–ö–æ–Ω—Ç–∞–∫—Ç–Ω–æ–µ –ª–∏—Ü–æ</th>
                            <th>–¢–µ–ª–µ—Ñ–æ–Ω</th>
                            <th>Email</th>
                            <th>–ê–¥—Ä–µ—Å</th>
                            <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                        </tr>
                `;
                
                data.forEach(client => {
                    html += `
                        <tr>
                            <td>${client.name}</td>
                            <td>${client.contact_person}</td>
                            <td>${client.phone}</td>
                            <td>${client.email || '-'}</td>
                            <td>${client.address || '-'}</td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="showClientModal(${JSON.stringify(client).replace(/"/g, '&quot;')})">‚úèÔ∏è</button>
                                <button class="btn btn-sm btn-warning" onclick="deleteClient(${client.id})">üóëÔ∏è</button>
                            </td>
                        </tr>
                    `;
                });
                
                html += '</table>';
                container.innerHTML = html;
                
            } catch (error) {
                container.innerHTML = '<div class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ —Å–µ—Ä–≤–µ—Ä –∑–∞–ø—É—â–µ–Ω –Ω–∞ localhost:3000</div>';
            }
        }

        async function loadEquipment() {
